<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
            android:id="@+id/top"
            android:background="#DD000000"
            android:layout_width="match_parent"
            android:layout_height="60dp">

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/left"/>

            <View
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

            <ImageView
                    android:id="@+id/list"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/list"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:background="#DD000000"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        <LinearLayout
                android:id="@+id/download_progress_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#11000000">

            <TextView
                    android:id="@+id/download_progress"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#AAFFFFFF"
                    android:visibility="gone"/>

        </LinearLayout>

        <GridLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3">

            <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/little_sun"/>

            <SeekBar
                    android:id="@+id/light"
                    android:maxHeight="2dp"
                    android:max="255"
                    android:layout_gravity="center_vertical"
                    android:layout_columnWeight="1"
                    android:layout_width="0dp"
                    android:progressDrawable="@drawable/seekbar_background"
                    android:progress="20"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/big_sun"/>
        </GridLayout>

        <GridLayout
                android:paddingBottom="10dp"
                android:columnCount="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/night"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/night_img"
                        android:layout_width="@dimen/pop_image_width"
                        android:layout_height="@dimen/pop_image_height"
                        android:background="@drawable/sleep"/>

                <TextView
                        android:id="@+id/night_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pop_text_size"
                        android:text="夜间"
                        android:textColor="#AAFFFFFF"
                        android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/buffer"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="@dimen/pop_image_width"
                        android:layout_height="@dimen/pop_image_height"
                        android:background="@drawable/buffer"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="缓存"
                        android:textSize="@dimen/pop_text_size"
                        android:textColor="#AAFFFFFF"
                        android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/setting"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="@dimen/pop_image_width"
                        android:layout_height="@dimen/pop_image_height"
                        android:background="@drawable/setting_night"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textSize="@dimen/pop_text_size"
                        android:textColor="#AAFFFFFF"
                        android:layout_gravity="center"/>

            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</RelativeLayout>